<div class="col-xs-12">
  <div class="thumbnail">
    <a href="<%=post.link%>">
      <img class="pull-right" src="http://placehold.it/250x250" alt="...">
    </a>
    <div class="caption">
      <a href="<%=post.link%>"><h3><%=post.title%></h3></a>
      <p><%= truncate(strip_tags(post.summary), length: 250) %></p>
      <p><small><em><%= post.vanity_link %>  |  <%= time_ago_in_words(post.timestamp) %></em></small></p>
      <div class="meta-bar">
        <a><span class="glyphicon glyphicon-thumbs-up"></span></a> <%= post.score%>pts
      </div>
    </div>
  </div>
</div>