<!DOCTYPE html>
<html>
<head>
  <title>TeacherNews</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
<nav class="navbar navbar-inverse">
  <div class="container">
    <div class="navbar-header">
      <%= link_to 'Teacher News', root_path, class: 'navbar-brand' %>
    </div>
    <div id="navbar">
      <% if current_user %>
        <div class="nav navbar-nav pull-right">
          <div class="dropdown">

            <%= image_tag current_user.image_url, alt: current_user.name, class: 'avatar-small', id: 'avatar-dropdown', :"type" => 'button', :"data-toggle" => 'dropdown', :"aria-haspopup" => 'true', :'aria-expanded' => 'false' %>

            <ul class="dropdown-menu" aria-labelledby="avatar-dropdown">
              <li><%= link_to 'My Profile', 'users/me' %></li>
              <li><%= link_to 'Log Out', logout_path, method: :delete %></li>
            </ul>

          </div>
        </div>
      <% else %>
        <div class="nav navbar-nav pull-right">
            <div class="btn success">
              <%= link_to 'Login', '/login', html_options = {class: 'btn btn-primary'} %>
            </div>
        </div>
      <% end %>
    </div>
  </div>
</nav>

<div class="container">
  <% flash.each do |key, value| %>
    <div class="alert alert-<%= key %>">
      <%= value %>
    </div>
  <% end %>

  <%= yield %>
</div>

</body>
</html>
